{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",  
    "strict": true,  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "types.d.ts"
  ]
}
